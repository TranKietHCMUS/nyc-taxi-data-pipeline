{
  "name": "postgres-sink-connector",
  "config": {
    "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
    "tasks.max": "1",
    "topics": "postgres.taxi_trip_records",
    "connection.url": "jdbc:postgresql://data-warehouse:5432/nyc-taxi",
    "connection.user": "k6",
    "connection.password": "k6",
    "table.name.format": "public.taxi_trip_records",
    "auto.create": "false",
    "insert.mode": "insert",
    "transforms": "extract_after,flatten",
    "transforms.extract_after.type": "org.apache.kafka.connect.transforms.ExtractField$Value",
    "transforms.extract_after.field": "after",
    "transforms.flatten.type": "org.apache.kafka.connect.transforms.Flatten$Value",
    "transforms.flatten.config.delimiter": "_",
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "true",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true"
  }
}